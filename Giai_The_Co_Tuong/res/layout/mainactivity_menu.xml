<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="android:attr/buttonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.kloesen.giaithe.MainActivity" >

    <LinearLayout
        android:id="@+id/menuActivity_Line_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.4"
        android:orientation="horizontal" 
        android:gravity="center"
        android:background="#80ff0000">

        <TextView
            android:id="@+id/menuActivity_ImageViewCoin"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/empty"
            android:background="@drawable/coin" />

        <Button
            android:id="@+id/menuActivity_ImageButtonBuy"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/empty"
            android:background="@drawable/buy"  
            android:onClick="onClickButton" />

        <Button
            android:id="@+id/menuActivity_ImageButtonInfo"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/empty"
            android:background="@drawable/info"  
            android:onClick="onClickButton" />

        <Button
            android:id="@+id/menuActivity_ImageButtonHelp"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/empty"
            android:background="@drawable/help" 
            android:onClick="onClickButton" />

        <Button
            android:id="@+id/menuActivity_ImageButtonSetting"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:contentDescription="@string/empty"
            android:background="@drawable/settings" 
            android:onClick="onClickButton" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuActivity_Line_2"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/heo_cartoon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuActivity_Line_3"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/menuactivity_buttonPlay"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/menuactivity_buttonplay"
            android:contentDescription="@string/MenuScreenButtonPlay"
            android:onClick="onClickButton" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuActivity_Line_4"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/menuactivity_connectFaceBookButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:contentDescription="@string/MenuScreenButtonFaceBook"
            android:background="@drawable/menuactivity_buttonconnect_fb_press" />
    </LinearLayout>

</LinearLayout>